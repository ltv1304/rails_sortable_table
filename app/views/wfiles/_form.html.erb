<%= render 'share/errors', object: @resourse%>
<%= form_with model: @resourse, url: form_path, data: { turbo: false } do |f| %>
  <div class='mb-3 row'>
    <div class='col-sm-2 col-form-label'>
      <%= f.label :item_name %>
    </div>

    <div class='col-sm-10'>
      <%= f.text_field :item_name, placeholder: "Новый файл", class: 'form-control' %>
    </div>
  </div>

  <div class='mb-3 row'>
    <div class='col-sm-2 col-form-label'>
      <%= f.label :item_type %>
    </div>
    
  </div>
  <%= f.hidden_field :parent_id, value: @resourse.parent_id %>
  <%= f.submit "Создать", class: 'btn btn-primary'  %>

<% end %>
